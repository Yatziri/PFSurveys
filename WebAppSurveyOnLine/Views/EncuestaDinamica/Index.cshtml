                                                        <label for=""> @textoseparado[i]</label> @Html.TextBox("FIELD_" + item.id.ToString() + "_" + n.ToString(), respuestaArray[i], new { @class = "texto span10", @maxlength = "100", @type = "number", @readonly = @ViewBag.Estatus })<br />

                                                        }
